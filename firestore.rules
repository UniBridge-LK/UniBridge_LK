rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection rules
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Events collection - allow all authenticated users to read and create
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.hostId == request.auth.uid || 
         request.auth.token.email_verified == true);
    }

    // Artifacts collection - Forum posts
    match /artifacts/{appId}/public/data/forumPosts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Replies subcollection
      match /replies/{replyId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }

    // Universities collection - allow all to read
    match /universities/{uniId} {
      allow read: if request.auth != null;
    }

    // Faculties collection - allow all to read
    match /faculties/{facultyId} {
      allow read: if request.auth != null;
    }

    // Departments collection - allow all to read
    match /departments/{deptId} {
      allow read: if request.auth != null;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

