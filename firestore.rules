rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection rules
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Events collection - allow all authenticated users to read and create
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.hostId == request.auth.uid || 
         request.auth.token.email_verified == true);
    }

    // Artifacts collection - Forum posts
    match /artifacts/{appId}/public/data/forumPosts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Replies subcollection
      match /replies/{replyId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }

    // Universities collection - allow all to read
    match /universities/{uniId} {
      allow read: if request.auth != null;
    }

    // Faculties collection - allow all to read
    match /faculties/{facultyId} {
      allow read: if request.auth != null;
    }

    // Departments collection - allow all to read
    match /departments/{deptId} {
      allow read: if request.auth != null;
    }

    // Friend requests - allow users to send and manage their own requests
    match /friend_requests/{requestId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.senderId;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
    }

    // Notifications - allow users to read and delete their own notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Chats collection - allow users to read/write their own conversations
    match /chats/{chatId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
        allow create: if request.auth != null;
      }
    }

    // Email OTPs collection
    match /emailOtps/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

